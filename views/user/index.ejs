<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <div class="container-fluid p-5">

        <div class="row p-3" style="border: 1px solid #ccc; font-weight: 600;">
            <div class="col-lg-2">Name</div>
            <div class="col-lg-2">Age</div>
            <div class="col-lg-2">Email</div>
            <div class="col-lg-2">Mobie</div>
            <div class="col-lg-2">Password</div>
            <div class="col-lg-2">Operations</div>
        </div>
        <br>
      
        <% ashi.forEach(user=> { %>
            <div class="row p-3" style="border: 1px solid #ccc; font-weight: 600;">
                <div class="col-lg-2">
                    <%= user.Name %>
                </div>
                <div class="col-lg-2">
                    <%= user.Age %>
                </div>
                <div class="col-lg-2">
                    <%= user.Email %>
                </div>
                <div class="col-lg-2">
                    <%= user.Mobile %>
                </div>
                <div class="col-lg-2">
                    <%= user.Password %>
                </div>
                <div class="col-lg-2">
                    <button class="btn btn-primary" type="submit"
                        onclick="editUser('<%= user._id %>')">Edit</button>
                    <form action="/deletepro" method="POST">
                        <input type="hidden" value="<%= user._id %>" name="proId">
                        <button class="btn btn-danger" type="submit"><span>Delete</span></button>
                      </form>
                </div>
            </div>


            <!-- model -->

            <div class="modal fade" id="exampleModal<%= user._id %>" tabindex="-1"
                aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-fullscreen p-5 " style="height: 80%;">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                      <h1 class="fw-semibold mb-4">Product</h1>
                      <form method="POST" action="/updatedoc" enctype="multipart/form-data">
                        <div class="row mb-3">
                          <div class="col-lg-8 col-md-8 col-sm-8">
                            <label for="exampleInputEmail1" class="form-label">Name</label>
                            <input type="text" class="form-control" name="Name" value="<%= user.Name %>">
                          </div>
                          <div class="col-lg-6 col-md-4 col-sm-4">
                            <label for="exampleInputEmail1" class="form-label">Age</label>
                            <input type="number" class="form-control" name="Age" value="<%= user.Age %>">
                          </div>
                          <div class="col-lg-6 col-md-8 col-sm-8">
                            <label for="exampleInputEmail1" class="form-label">Email</label>
                            <input type="email" class="form-control" name="Email" value="<%= user.Email %>">
                          </div>
                          <div class="col-lg-6 col-md-8 col-sm-8">
                            <label for="exampleInputEmail1" class="form-label">Mobile</label>
                            <input type="email" class="form-control" name="Mobile" value="<%= user.Mobile %>">
                          </div>
                          <div class="col-lg-6 col-md-8 col-sm-8">
                            <label for="exampleInputEmail1" class="form-label">Password</label>
                            <input type="email" class="form-control" name="Password" value="<%= user.Password %>">
                          </div>
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                          <input type="hidden" value="<%= user._id %>" name="proId">
                          <button type="submit" class="btn btn-primary" data-bs-dismiss="modal">Save changes</button>
                        </div>
                      </form>
                    </div>

                  </div>
                </div>
              </div>
            <% }); %>


                <div class="row p-5">
                    <h3>ADD USER</h3><br>
                    <form method="post">
                        <div class="row p-2">
                            <div class="col-lg-12">
                                <label for="">Name</label><br>
                                <input type="text" name="Name">
                            </div>
                        </div>
                        <div class="row p-2">
                            <div class="col-lg-12">
                                <label for="">Age</label><br>
                                <input type="date" name="Age">
                            </div>
                        </div>
                        <div class="row p-2">
                            <div class="col-lg-12">
                                <label for="">Email</label><br>
                                <input type="email" name="Email">
                            </div>
                        </div>
                        <div class="row p-2">
                            <div class="col-lg-12">
                                <label for="">mobile</label><br>
                                <input type="number" name="Mobile">
                            </div>
                        </div>
                        <div class="row p-2">
                            <div class="col-lg-12">
                                <label for="">password</label><br>
                                <input type="password" name="Password">
                            </div>
                        </div><br>
                        <button type="submit" class="btn btn-primary" name="submited">Submit</button>

                    </form>

                </div>

    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>